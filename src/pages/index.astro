---
import { Image } from 'astro:assets';
import Layout from '@layouts/layout.astro';
import Block from '@components/block.astro';
import mountainImage from '@assets/images/mountain.png';
import Compass from '@components/compass.astro';
---

<Layout title="">
  <main>
    <Block class="border-t-0" showTopLeft={false} showTopRight={false}>
      <div class="flex flex-row p-24 space-x-20">
        <div class="flex-1 pr-32">
          <h1 class="font-display font-light leading-relaxed text-6xl">Navigating through the coding landscapes</h1>
          <p class="font-mono mb-8 pr-32 pb-8 text-gray-300">
            Welcome to Erkkel Solutions' landscape, where expertise meets innovation. Step into our world where every line of code shapes the digital horizon.
            Let's embark on this journey together, transforming ideas into reality and shaping the ever-evolving coding landscape.
          </p>
          <div>
            <a href="/about-us" class="bg-orange-600 hover:bg-orange-800 text-gray-950 uppercase font-mono font-bold px-6 py-2.5">Explore more</a>
          </div>
        </div>
        <div>
          <Compass />
        </div>
      </div>
      <div class="flex justify-center p-8">
        <Image src={mountainImage} alt="mountain" />
      </div>
    </Block>
  </main>
</Layout>
