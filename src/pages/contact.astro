---
import Layout from '@layouts/layout.astro';
import Block from '@components/block.astro';
import { Icon } from 'astro-icon/components';

type ContactInfo = {
  icon: string;
  text: string;
};

const contactInfos: ContactInfo[] = [
  {
    icon: 'phone',
    text: '+36 30 481 8949',
  },
  {
    icon: 'linkedin',
    text: 'in/erkkel',
  },
  {
    icon: 'send',
    text: 'connect@erkkel.com',
  },
];
---

<Layout title="Contact">
  <main class="flex h-full flex-col">
    <Block class="basis-1/3 border-t-0" showTopLeft={false} showTopRight={false}>
      <div class="grid grid-cols-3 grid-rows-1 h-full">
        <Block class="row-span-2 col-span-2 border-t-0 border-l-0 border-b-0 border-r-0 p-10 pr-32" showTopLeft={false}>
          <h1 class="font-display font-thin text-8xl leading-relaxed">Let's get <p class="font-bold">in touch</p></h1>
        </Block>
        <Block
          class="row-span-2 border-t-0 border-r-0 border-b-0 flex justify-center items-center p-10"
          showTopLeft={false}
          showTopRight={false}
          showBottomRight={false}
          showBottomLeft={false}
        >
          <Icon name="contact" width={283} height={135} />
        </Block>
      </div>
    </Block>
    <Block class="basis-2/3 border-t-0" showTopLeft={false} showTopRight={false}>
      <div class="grid grid-cols-3 h-full">
        <Block class="row-span-4 col-span-2 border-t-0 border-l-0 border-b-0 p-10" showTopLeft={false}>
          <form>
            <h2 class="font-display font-light text-2xl mb-16">Ready to transform <span class="font-bold">your vision into reality?</span></h2>
            <div class="flex flex-row my-8">
              <div class="basis-1/2 flex flex-col mr-4 justify-between">
                <input
                  type="text"
                  class="appearance-none bg-transparent border-b border-gray-600 p-4 mb-4 focus:outline-none font-mono placeholder-gray-100"
                  placeholder="Name"
                  aria-label="Name"
                />
                <input
                  type="text"
                  class="appearance-none bg-transparent border-b border-gray-600 p-4 mb-4 focus:outline-none font-mono placeholder-gray-100"
                  placeholder="Company"
                  aria-label="Company"
                />
                <input
                  type="email"
                  class="appearance-none bg-transparent border-b border-gray-600 p-4 mb-4 focus:outline-none font-mono placeholder-gray-100"
                  placeholder="Email"
                  aria-label="Email"
                />
                <input
                  type="tel"
                  class="appearance-none bg-transparent border-b border-gray-600 p-4 mb-4 focus:outline-none font-mono placeholder-gray-100"
                  placeholder="Phone"
                  aria-label="Phone"
                />
              </div>
              <div class="basis-1/2">
                <textarea
                  class="appearance-none bg-transparent border border-gray-600 focus:outline-none p-4 h-full w-full font-mono placeholder-gray-100"
                  placeholder="How can we help?"></textarea>
              </div>
            </div>

            <div class="flex justify-end">
              <button class="bg-orange-600 hover:bg-orange-800 text-gray-950 uppercase font-mono font-bold px-6 py-2.5 mt-4">Send message</button>
            </div>
          </form>
        </Block>
        <div>
          {
            contactInfos.map((contact) => {
              return (
                <Block class="border-t-0 border-l-0 border-r-0 px-10 py-14 flex flex-row items-center" showTopLeft={false} showTopRight={false}>
                  <Icon name={contact.icon} width={24} height={24} class="text-orange-600 mr-4" />
                  <h1 class="font-display font-thin text-xl text-gray-300">{contact.text}</h1>
                </Block>
              );
            })
          }
        </div>
      </div>
    </Block>
  </main>
</Layout>
