---
import Layout from '@layouts/layout.astro';
import Block from '@components/block.astro';
import { Icon } from 'astro-icon/components';

type Service = {
  name: string;
  description: string;
  logo: string;
};

const services: Service[] = [
  {
    name: 'Pioneering Digital Products',
    description:
      'Tailored software solutions to meet your unique business needs. Our team leverages the latest technologies to build scalable and robust custom applications.',
    logo: 'service-1',
  },
  {
    name: 'Immersive Design',
    description:
      'Tailored software solutions to meet your unique business needs. Our team leverages the latest technologies to build scalable and robust custom applications.',
    logo: 'service-2',
  },
  {
    name: 'Heuristic Approach',
    description:
      'Tailored software solutions to meet your unique business needs. Our team leverages the latest technologies to build scalable and robust custom applications.',
    logo: 'service-3',
  },
  {
    name: 'Heuristic Approach',
    description:
      'Tailored software solutions to meet your unique business needs. Our team leverages the latest technologies to build scalable and robust custom applications.',
    logo: 'service-3',
  },
];
---

<Layout title="Services">
  <main>
    <Block class="border-t-0" showTopLeft={false} showTopRight={false}>
      <div class="flex flex-row">
        <Block class="basis-2/3 border-t-0 border-l-0 border-r-0 p-10 pr-24" showTopLeft={false} showBottomLeft={false}>
          <h1 class="font-display font-thin text-5xl leading-relaxed">We specialize in <span class="text-orange-500">Bridging the Tech Canyon</span></h1>
          <p class="font-mono font-light text-2xl">offering a range of innovative solutions tailored to meet your digital needs.</p>
        </Block>
        <Block
          class="basis-1/3 border-t-0 border-r-0 border-b-0 flex justify-center items-center p-10"
          showTopLeft={false}
          showTopRight={false}
          showBottomRight={false}
          showBottomLeft={false}
        >
          <Icon name="services" width={204} height={260} />
        </Block>
      </div>
    </Block>
    <Block class="border-t-0" showTopLeft={false} showTopRight={false}>
      <div class="flex flex-row">
        <Block class="basis-2/5 border-l-0 border-t-0 border-b-0 p-8" showTopLeft={false} showBottomLeft={false}>
          <h2 class="font-mono font-light text-2xl leading-relaxed">Offerings</h2>
          <p class="font-mono">Tailored software solutions to meet your unique business needs.</p>
        </Block>
        <div class="basis-3/5 flex flex-col">
          {
            services.map((service) => (
              <Block class="border-t-0 border-l-0 border-r-0 p-4 grid grid-cols-5 items-center" showTopLeft={false} showTopRight={false}>
                <Icon name={service.logo} height={100} width={100} />
                <div class="col-span-3">
                  <h3 class="font-mono text-2xl">{service.name}</h3>
                </div>
                <button class="toggle-button text-orange-600 uppercase font-mono font-bold">+ More</button>
                <div class="font-mono col-start-2 col-span-3 hidden">
                  Tailored software solutions to meet your unique business needs. Our team leverages the latest technologies to build scalable and robust custom
                  applications.
                </div>
              </Block>
            ))
          }
        </div>
      </div>
    </Block>
  </main>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('.toggle-button');

    buttons.forEach((button) => {
      button.addEventListener('click', () => {
        const content = button.nextElementSibling;
        content?.classList.toggle('hidden');

        button.innerHTML = content?.classList.contains('hidden') ? '+ More' : '- Less';
      });
    });
  });
</script>
