---
interface Props {
  class?: string;
  size?: string;
}

const { class: className, size = '1em', ...rest } = Astro.props;
---

<div class:list={['cross', className]} {...rest}>
  <svg xmlns="http://www.w3.org/2000/svg" width={size} height={size} viewBox="0 0 24 24">
    <path fill="currentColor" d="M19 12.998h-6v6h-2v-6H5v-2h6v-6h2v6h6z"></path>
  </svg>
</div>

<style>
  .cross {
    user-select: none;
    position: absolute;
    color: white;
    z-index: 1;
  }
</style>
