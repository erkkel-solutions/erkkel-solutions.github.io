---
import Block from './Block.astro';
import Logo from './Logo.astro';
---

<nav>
  <div class="mx-auto">
    <div class="flex">
      <Block class="flex px-24 py-8 items-center justify-center">
        <Logo />
      </Block>
      <Block class="flex flex-auto items-center justify-evenly border-l-0" showTopLeft={false} showBottomLeft={false}>
        <a href="/about_us" class="font-mono hover:text-orange-500">About us</a>
        <a href="/services" class="font-mono hover:text-orange-500">Services</a>
        <a href="/clients" class="font-mono hover:text-orange-500">Clients</a>
        <a href="/open_positions" class="font-mono hover:text-orange-500">Open positions</a>
        <a href="/contact" class="font-mono hover:text-orange-500">Contact</a>
      </Block>
    </div>
  </div>
</nav>
